{
  "version": "1.0",
  "description": "Example UI setup with hierarchical elements",
  "commands": [
    {
      "action": "create-scene",
      "name": "MenuScene",
      "path": "Assets/Scenes",
      "type": "DefaultGameObjects",
      "addToBuild": true
    },
    {
      "action": "add-canvas",
      "name": "MainCanvas",
      "scene": "MenuScene",
      "renderMode": "ScreenSpaceOverlay",
      "referenceWidth": 1920,
      "referenceHeight": 1080,
      "scaleMode": "ScaleWithScreenSize"
    },
    {
      "action": "add-panel",
      "name": "HeaderPanel",
      "parent": "MainCanvas",
      "width": 800,
      "height": 100,
      "anchor": "TopCenter",
      "position": [0, -50]
    },
    {
      "action": "add-text",
      "name": "TitleText",
      "parent": "HeaderPanel",
      "text": "My Awesome Game",
      "fontSize": 24,
      "anchor": "MiddleCenter"
    },
    {
      "action": "add-panel",
      "name": "MenuPanel",
      "parent": "MainCanvas",
      "width": 400,
      "height": 300,
      "anchor": "MiddleCenter"
    },
    {
      "action": "add-button",
      "name": "PlayButton",
      "parent": "MenuPanel",
      "text": "Start Game",
      "width": 200,
      "height": 50,
      "anchor": "MiddleCenter",
      "position": [0, 50]
    },
    {
      "action": "add-button",
      "name": "SettingsButton",
      "parent": "MenuPanel",
      "text": "Settings",
      "width": 200,
      "height": 50,
      "anchor": "MiddleCenter",
      "position": [0, -20]
    },
    {
      "action": "add-button",
      "name": "ExitButton",
      "parent": "MenuPanel",
      "text": "Exit",
      "width": 200,
      "height": 50,
      "anchor": "MiddleCenter",
      "position": [0, -90]
    }
  ]
}