{
  "version": "1.0",
  "description": "Test scene with canvas, panel, and text fields",
  "commands": [
    {
      "action": "create-scene",
      "name": "TestUIScene",
      "path": "Assets/Scenes",
      "type": "DefaultGameObjects",
      "addToBuild": false
    },
    {
      "action": "add-canvas",
      "name": "MainCanvas",
      "scene": "TestUIScene",
      "renderMode": "ScreenSpaceOverlay",
      "referenceWidth": 1920,
      "referenceHeight": 1080,
      "scaleMode": "ScaleWithScreenSize"
    },
    {
      "action": "add-panel",
      "name": "InfoPanel",
      "parent": "MainCanvas",
      "width": 400,
      "height": 200,
      "anchor": "MiddleCenter"
    },
    {
      "action": "add-text",
      "name": "TitleText",
      "parent": "InfoPanel",
      "text": "Welcome to Test Scene",
      "fontSize": 18,
      "width": 350,
      "height": 30,
      "anchor": "TopCenter",
      "position": [0, -20]
    },
    {
      "action": "add-text",
      "name": "DescriptionText",
      "parent": "InfoPanel",
      "text": "This panel contains two text fields created via batch command",
      "fontSize": 14,
      "width": 350,
      "height": 60,
      "anchor": "BottomCenter",
      "position": [0, 20]
    }
  ]
}